{% extends 'base.html.twig' %}

{% block title %}Télécharger mon CV{% endblock %}

{% block stylesheets %}
<style>
    .form-container {
        background: rgba(20, 20, 20, 0.8);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 15px;
        padding: 2rem;
        animation: fadeIn 0.5s ease-out;
    }

    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .form-label {
        color: #fff;
        margin-bottom: 0.5rem;
    }

    .form-control, .form-select {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: #fff;
    }

    .form-control:focus, .form-select:focus {
        background: rgba(255, 255, 255, 0.1);
        border-color: #3498db;
        color: #fff;
        box-shadow: 0 0 0 0.25rem rgba(52, 152, 219, 0.25);
    }

    .btn-primary {
        background: linear-gradient(45deg, #2c3e50, #3498db);
        border: none;
        padding: 12px 30px;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        background: linear-gradient(45deg, #3498db, #2c3e50);
        transform: scale(1.05);
    }
</style>
{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="text-center mb-5">
                <h1 class="display-4 text-light">Télécharger mon CV</h1>
                <p class="lead text-light">Merci de remplir ce formulaire pour accéder à mon CV</p>
            </div>

            <div class="form-container">
                {{ form_start(form) }}
                    <div class="mb-4">
                        {{ form_label(form.nom) }}
                        {{ form_widget(form.nom) }}
                    </div>

                    <div class="mb-4">
                        {{ form_label(form.prenom) }}
                        {{ form_widget(form.prenom) }}
                    </div>

                    <div class="mb-4">
                        {{ form_label(form.email) }}
                        {{ form_widget(form.email) }}
                    </div>

                    <div class="mb-4">
                        {{ form_label(form.motif) }}
                        {{ form_widget(form.motif) }}
                    </div>

                    <div class="text-center">
                        {{ form_widget(form.submit) }}
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}