{% extends 'base.html.twig' %}

{% block title %}Portfolio{% endblock %}

{% block stylesheets %}
<style>
.mb-4 {
    /* Gardez les styles existants et ajoutez : */
    transition: all 0.3s ease;
    }

.mb-4:hover {
    transform: translateY(-5px) scale(1.02);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
    background: rgba(255, 255, 255, 0.1);
}

.mb-4:hover .text-light ul li::before {
    color: #2ecc71;
    transform: translateX(5px);
    transition: all 0.3s ease;
}

.mb-4:hover .progress-bar {
    filter: brightness(1.2);
    box-shadow: 0 0 15px rgba(52, 152, 219, 0.5);
}

.mb-4:hover h5, 
.mb-4:hover span {

    background: linear-gradient(45deg, #2ecc71, #3498db);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    transform: scale(1.05);
    transition: all 0.3s ease;
    }
    .skill-section {
        animation: fadeInUp 0.6s ease-out;
    }

    .mb-4 {
        border-radius: 10px;
        padding: 20px;
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        transform: translateY(50px);
        opacity: 0;
        animation: slideIn 0.5s ease-out forwards;
    }

    .progress {
        height: 25px;
        background: rgba(0, 0, 0, 0.2);
        border-radius: 15px;
        overflow: hidden;
        margin: 10px 0;
    }

    .progress-bar {
        transition: width 1.5s ease-out;
        width: 0;
    }

    .text-light ul {
        list-style: none;
        padding-left: 20px;
    }

    .text-light ul li {
        position: relative;
        padding: 5px 0;
        opacity: 0;
        transform: translateX(-20px);
        animation: slideInRight 0.5s ease-out forwards;
    }

    .text-light ul li::before {
        content: "→";
        position: absolute;
        left: -20px;
        color: #3498db;
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes slideIn {
        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    @keyframes slideInRight {
        to {
            transform: translateX(0);
            opacity: 1;
        }
    }

    /* Délais d'animation pour chaque compétence */
    .mb-4:nth-child(1) { animation-delay: 0.1s; }
    .mb-4:nth-child(2) { animation-delay: 0.2s; }
    .mb-4:nth-child(3) { animation-delay: 0.3s; }
    .mb-4:nth-child(4) { animation-delay: 0.4s; }
    .mb-4:nth-child(5) { animation-delay: 0.5s; }
    .mb-4:nth-child(6) { animation-delay: 0.6s; }
    .mb-4:nth-child(7) { animation-delay: 0.7s; }

    /* Délais d'animation pour les listes */
    .text-light ul li:nth-child(1) { animation-delay: 0.8s; }
    .text-light ul li:nth-child(2) { animation-delay: 0.9s; }
    .text-light ul li:nth-child(3) { animation-delay: 1.0s; }

    /* Style des titres et pourcentages */
    h5 {
        color: #3498db;
        margin-bottom: 15px;
    }

    .text-light span {
        background: linear-gradient(45deg, #3498db, #2ecc71);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: bold;
    }
</style>
{% endblock %}

